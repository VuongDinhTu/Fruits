qua = ['Apple','Avocado','Banana','Carambula','Cocos','Grape White','Kiwi','Lemon','Orange','Tomato Cherry Red'] 
dir_train = '/content/drive/MyDrive/qua' 
dir_test = '/content/drive/MyDrive/qua'   #link library fruits in ggdriver 

listpath = []
y_train = []
